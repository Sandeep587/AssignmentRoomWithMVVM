<resources>
    <!-- Base application theme. -->
    <style name="Theme.Assignment5paisa" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/bg_blue</item>
        <item name="colorPrimaryVariant">@color/bg_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue</item>
        <item name="colorSecondaryVariant">@color/blue</item>
        <item name="colorOnSecondary">@color/bg_blue</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="AppBarCustomTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:backgroundTint">@color/bg_blue</item>
    </style>

    <style name="RecyclerViewCustomTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:background">@color/prusian_blue</item>
    </style>

    <style name="RecyclerViewItemContainerTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="RecyclerViewItemTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:background">@color/bg_blue</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="LoginTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:background">@color/bg_blue</item>
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="LoginTheme.TitleTextView" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="LoginTheme.EditText" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="LoginTheme.TextView" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="LoginTheme.Label" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="LoginTheme.Button" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/blue</item>
    </style>

    <style name="SortingTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:background">@color/prusian_blue</item>
    </style>

</resources>